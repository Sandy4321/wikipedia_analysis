|rev1Score    = {{rating|5|5}} <small>(1987)</small><ref name="allmusic" />
|rev2         = [[Robert Christgau]]
|rev2Score    = (B) <small>(1987)</small><ref>{{cite web | url = http://www.robertchristgau.com/get_artist.php?name=u2 | title = U2 - Consumer Guide Reviews | publisher = [[Robert Christgau]] | accessdate = 2009-10-13}}</ref>
|rev3         = ''[[NME]]''

| rev1Score = {{Rating|4.5|5}}<ref name="Gowan"/>
| rev2 = ''[[Blender (magazine)|Blender]]''
| rev2Score = {{Rating|4|5}}<ref>{{cite journal|title=Review: The Headphone Masterpiece|journal=[[Blender (magazine)|Blender]]|month=November|year=2002}}</ref>
| rev3 = [[Robert Christgau]]
| rev3Score = {{Rating-Christgau|hm2}}<ref name="Christgau"/>
| rev4 = [[Drowned in Sound]]
| rev4Score = 8/10<ref name="Nettleton"/>
| rev5 = [[eMusic]]
| rev5Score = {{Rating|4|5}}<ref name="Sherburne">{{cite web|last=Sherburne|first=Philip|authorlink=Philip Sherburne|date=September 16, 2008|url=http://www.emusic.com/music-news/review/album/the-headphone-masterpiece-cody-chesnutt/|title=Cody ChesnuTT, The Headphone Masterpiece|publisher=[[eMusic]]|accessdate=April 30, 2013}}</ref>

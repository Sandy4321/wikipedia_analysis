                                     |2={{clade|1={{clade|1={{bt-latrus|Bromus intermedius}}
                                                         |2={{bt-latrus|Bromus arvensis}}
                                                  }}
                                               |2={{clade|1={{bt-latrus|Bromus squarrosus}}
                                                         |2={{bt-latrus|Bromus japonicus}}
                                                  }}
                                               |3={{bt-latrus|Bromus pseudobrachystachys}}
                                        }}
                              }}
                           |2={{clade|1={{bt-latrus|Bromus scoparius}}

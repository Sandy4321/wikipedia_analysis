| GR = 82 % (GBA)<ref name="grankings">{{cite web|title=Final Fantasy V Advance – GBA|url=http://www.gamerankings.com/gba/930369-final-fantasy-v-advance/index.html|publisher=[[Game Rankings]]|accessdate=2012-07-29|lang=en|archiveurl=http://www.webcitation.org/6DpFn1ORE|archivedate=2013-01-21}}</ref>
| MC = 83 % (GBA)<ref name="metacritic">{{cite web|title=Final Fantasy V Advance|url=http://www.metacritic.com/games/platforms/gba/finalfantasy5advance|publisher=[[Metacritic]]|accessdate=2012-06-17|lang=en|archiveurl=http://www.webcitation.org/6DpFwulSQ|archivedate=2013-01-21}}</ref>
|rev2 = [[GameDaily]]

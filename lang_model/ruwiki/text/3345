|rev2Score = 91%<ref name="the_one_16bit" />
|rev3 = [[:en:Computer and Video Games|Computer and Video Games]] (PC, Atari ST)
|rev3Score = 89%<ref name="CVG_review">{{citation | date = July 1990 | issue = 104 | periodical = Computer and Video Games | author = Paul Rand | title = F-19 by MicroProse | page = 76 | url = https://archive.org/details/Computer_Video_Games_Issue_104_1990-07_EMAP_Publishing_GB}}</ref>
|rev4 = [[:en:ST Format|ST Format]] (Atari ST)
|rev4Score = 96%<ref name="ST1" /><ref name="ST2" />

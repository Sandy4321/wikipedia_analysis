| rev3Score = {{Rating|3|4}}<ref name="Hunt"/>
| rev4 = ''[[The New York Times]]''  
| rev4Score = (положительная)<ref name="Pareles"/>
| rev5 = ''[[Q (magazine)|Q]]''
| rev5Score = {{Rating|3|5}}<ref>{{citation | title = Janet Jackson: Janet Jackson's Rhythm Nation 1814 | publisher = rocksbackpages.com | date = 1989-10 | url = http://www.rocksbackpages.com/article.html?ArticleID=11589 | accessdate = 2010-08-29}}</ref>
| rev6 = ''[[Rolling Stone]]''

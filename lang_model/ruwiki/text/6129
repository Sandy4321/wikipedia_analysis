|OPM = 10 / 10<ref name="opm-us">{{статья| год=2006| автор= | заглавие=Final Fantasy XII|издание=[[Official U.S. PlayStation Magazine]] |номер= 11 |page= 106 |издательство=Ziff Davis Media|ссылка =http://www.accessmylibrary.com/article-1G1-152125791/final-fantasy-xii.html}}</ref>

|СИ = 9,5 / 10<ref name="gameland">{{cite web|url=http://www.gameland.ru/ps2/final-fantasy-xii/reviews/36265/|title=Final Fantasy XII|last=Одинцова|first=Наталья|date=2007|work=№5|publisher=«[[Страна игр]]»|lang=ru|accessdate=20 октября 2012 года|archiveurl=http://www.webcitation.org/6BcovLHBQ|archivedate=2012-10-23}}</ref>

|MC = 92 / 100<ref name="mc">{{cite web|url=http://www.metacritic.com/game/playstation-2/final-fantasy-xii|title=Final Fantasy XII for PlayStation 2 Reviews, Ratings, Credits and More|publisher=[[Metacritic]]|accessdate=20 октября 2012 года|lang=en|archiveurl=http://www.webcitation.org/6BcoxvBY0|archivedate=2012-10-23}}</ref>

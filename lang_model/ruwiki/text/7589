 article = Sonic Compilation |
 na = [[14 июня]] {{vgy|1997}}<ref name="compilation">{{cite web|url=http://www.ign.com/games/sonic-classics-3-in-1-sonic-compilation/gen-12179|title=Sonic Classics 3 In 1 (Sonic Compilation)|publisher=[[IGN]]|accessdate=2015-06-15|lang=en}}</ref> |

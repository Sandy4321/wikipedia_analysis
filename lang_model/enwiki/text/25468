{{Sculpture
 | image = [[Image:Panorama of the Fountain of Time.JPG|300px|center|''Fountain of Time'' in southeast [[Washington Park, Chicago (park)|Washington Park]] at the western edge of the [[Midway Plaisance]]]]
 | title = Fountain of Time
 | artist = [[Lorado Taft]]
 | year = 1920, dedicated 1922
 | type = [[Concrete]]
 | height_imperial = 24
 | width_imperial = 126
 | width_inch = 10
 | length_imperial = 23

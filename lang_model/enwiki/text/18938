| GR = 75.13%<ref name="gamerankings">{{Cite web |url=http://www.gamerankings.com/xbox360/961649-south-park-lets-go-tower-defense-play/index.html |title=South Park Let's Go Tower Defense Play! for Xbox 360 |publisher=[[GameRankings]] |accessdate=September 4, 2011}}</ref>
| GSpot = 7.5/10<ref name="review_gspot">{{Cite web|last=Todd |first=Brett |url=http://gamespot.com/xbox360/strategy/southparkletsgotowerdefenseplay/review.html |title=South Park Let's Go Tower Defense Play! Review |publisher=[[GameSpot]] |date=October 20, 2009 |accessdate=September 4, 2011}}</ref>

| lat1_deg = 33 | lat1_min = 25 | lat1_sec = 23 | lat1_dir = S
| lon1_deg = 18 | lon1_min = 5 | lon1_sec = 5 | lon1_dir = E
| label2 = [[Haga Haga]]
| link2 = Haga Haga

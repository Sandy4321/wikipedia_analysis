 | first4=L.
 | last5=Ballet
 | first5=J.
 | last6=Barbiellini
 | first6=G.
 | last7=Baring
 | first7=M. G.
 | last8=Bastieri
 | first8=D.
 | last9=Bechtol
 | first9=K.
 | journal=Science
 |arxiv = 1302.3307 |bibcode = 2013Sci...339..807A
 | last10=Bellazzini
 | first10=R.
 | last11=Blandford

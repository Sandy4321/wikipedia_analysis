| buts1      = {{but hockey|Koutcherov|Palát|m=15|s=35}}<br />{{but hockey|Stamkos|Killorn|Carle|m=25|s=12}}<br />{{but hockey|Palát|Koutcherov|Stralman|m=38|s=56|note=SN}}<br /><br />{{but hockey|Koutcherov|m=57|s=59}}
| buts2      = <br /><br /><br />{{but hockey|Pacioretty|Gallagher|m=55|s=03}}
| officiel   = Chris Rooney<br />Kelly Sutherland<br />Marc Joannette
| officiel2  = Jay Sharrers<br />Mark Shewchyk<br />Brian Murphy

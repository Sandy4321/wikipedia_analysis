| rev4Score = {{Note-5|4}}

| rev5 = [[The Sun]]<ref name="TheSun">{{en}} {{Lien web|url=http://www.thesun.co.uk/sol/homepage/showbiz/sftw/article2028676.ece|titre=Hottest tracks of the week|auteur=Poppy Cosyns|site=The Sun|en ligne le=12 décembre 2008|consulté le=9 juillet 2010}}</ref>

{{Image label|x=0.40|y=0.20|scale=350|text=[[Juan Carlos Rodríguez|<span style="font-size:0.8em; color:Maroon;">'''Juan Carlos'''</span>]]}}
{{Image label|x=0.15|y=0.15|scale=350|text=[[Ronald Koeman|<span style="font-size:0.8em; color:Maroon;">'''Koeman'''</span>]]}}
{{Image label|x=0.31|y=0.15|scale=350|text=[[Fernando Muñoz|<span style="font-size:0.8em; color:Maroon;">'''Nando'''</span>]]}}
{{Image label|x=0.05|y=0.20|scale=350|text=[[Albert Ferrer|<span style="font-size:0.8em; color:Maroon;">'''Ferrer'''</span>]]}}
{{Image label|x=0.05|y=0.40|scale=350|text=[[José Mari Bakero|<span style="font-size:0.8em; color:Navy;">'''Bakero'''</span>]]}}
{{Image label|x=0.13|y=0.31|scale=350|text=[[Eusebio Sacristán|<span style="font-size:0.8em; color:Navy;">'''Eusebio'''</span>]]}}
{{Image label|x=0.30|y=0.31|scale=350|text=[[Josep Guardiola|<span style="font-size:0.8em; color:Navy;">'''Guardiola'''</span>]]}}
{{Image label|x=0.37|y=0.40|scale=350|text=[[Michael Laudrup|<span style="font-size:0.8em; color:Navy;">'''Laudrup'''</span>]]}}
{{Image label|x=0.11|y=0.50|scale=350|text=[[Julio Salinas|<span style="font-size:0.8em; color:Yellow;">'''Salinas'''</span>]]}}
{{Image label|x=0.29|y=0.50|scale=350|text=[[Hristo Stoichkov|<span style="font-size:0.8em; color:Yellow;">'''Stoichkov'''</span>]]}}
{{Image label end}}
